<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_background_play_music">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:layout_margin="10dp"
            android:text="1"
            android:id="@+id/tvsonginlistindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvnamesonginlist"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:layout_toRightOf="@id/tvsonginlistindex"
            android:textColor="#ffffff"
            android:text="Name Song"
            />
        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@id/tvsonginlistindex"
            android:layout_below="@+id/tvnamesonginlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ca si"
            android:id="@+id/tvnamecasiinlist"
            android:textColor="#ffffff"
            android:textSize="12sp"
            />
    </RelativeLayout>
</RelativeLayout>