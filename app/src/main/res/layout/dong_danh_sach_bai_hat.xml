<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:elevation="5dp">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvdanhsachindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:id="@+id/tvdanhsachtenbaihat"
            android:text="Co Anh O Day Roi"
            android:layout_toRightOf="@id/tvdanhsachindex"
            android:maxWidth="200dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tvdanhsachtencasi"
            android:text="Trung Quan Idol"
            android:layout_below="@id/tvdanhsachtenbaihat"
            android:layout_toRightOf="@id/tvdanhsachindex"
            android:textSize="14sp"
            android:ellipsize="end"
            android:layout_margin="5dp"
            android:singleLine="true"
            android:textColor="#B1A1A1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/iconlove"
            android:id="@+id/imgviewdanhsachiconlike"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icondownload"
            android:id="@+id/imgviewdanhsachicondownload"
            android:layout_toLeftOf="@id/imgviewdanhsachiconlike"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>

</android.support.v7.widget.CardView>