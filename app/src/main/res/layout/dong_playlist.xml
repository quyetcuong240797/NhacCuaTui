<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:scaleType="fitXY"
        android:id="@+id/imageviewbackgroudplaylist"
        android:layout_width="match_parent"
        android:layout_height="110dp" />
    <View
        android:background="@drawable/custom_background_banner"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        />
    <ImageView
        android:id="@+id/imageviewsongplaylist"
        android:elevation="6dp"
        android:layout_alignBottom="@id/imageviewbackgroudplaylist"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/tvtenplaylist"
        android:textSize="13sp"
        android:text="Co Anh O day Roi"
        android:ellipsize="end"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="50dp"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginLeft="13dp"
        android:layout_alignBottom="@id/imageviewsongplaylist"
        android:layout_toRightOf="@id/imageviewsongplaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>