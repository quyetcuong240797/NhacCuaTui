<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:background="@drawable/custom_dialog"
    android:layout_height="140dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvdialogdownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Bạn có muốn tải bài hát này?"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnacceptndownload"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/custom_button_dialog"
        android:text="Download"
        android:textColor="#ffffff"
        android:textSize="10sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvdialogdownload"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btncanceldownload"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:text="Hủy"
        android:background="@drawable/custom_button_dialog_cancle"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvdialogdownload"
        tools:ignore="MissingConstraints" />


</android.support.constraint.ConstraintLayout>